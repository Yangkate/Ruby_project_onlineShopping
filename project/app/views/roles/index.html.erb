<div class="container">

  <div class="page-header">
    <h1>Roles</h1>
  </div>
  <br>

  <div class="row">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
      </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td style="width: 70%"><%= role.Title %></td>
        <td><%= link_to 'Edit', edit_role_path(role) %></td>
        <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


    <div class="col-lg-12 text-right"><%= link_to 'New Role', new_role_path,  :class => "btn btn-default" %></div>

  </div>
</div>
<div class="container">
  <div class="page-header">
    <h1>Reviews</h1>
  </div>
  <br>


  <table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Comment</th>
      <th>Shopping mall</th>
      <th>Commented by</th>
      <th>Posted date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td style="width: 30%;"><%= review.comment %></td>
        <td><%= ShoppingMall.find(review.ShoppingMall_id).shopping_mall_name %></td>
        <td><%= User.find(review.User_id).first_name %> <%= User.find(review.User_id).last_name %></td>
        <td><%= review.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
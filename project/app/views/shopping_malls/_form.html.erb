<%= form_for(@shopping_mall, html: {class: "form-horizontal"}) do |f| %>
  <% if @shopping_mall.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shopping_mall.errors.count, "error") %> prohibited this shopping_mall from being saved:</h2>

      <ul>
      <% @shopping_mall.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <div class="form-group">
      <div class="col-lg-2"><%= f.label :shopping_mall_name %></div>
      <div class="col-lg-5"><%= f.text_field :shopping_mall_name, :class => "form-control", :required => true %></div>
    </div>
    <div class="form-group">
      <div class="col-lg-2"><%= f.label :phone_number %></div>
      <div class="col-lg-5"><%= f.text_field :phone_number, :class => "form-control", :required => true %></div>
    </div>
    <div class="form-group">
      <div class="col-lg-2"><%= f.label :address %></div>
      <div class="col-lg-5"><%= f.text_field :address, :class => "form-control", :required => true %></div>
    </div>
    <div class="form-group">
      <div class="col-lg-2"><%= f.label :City_id %></div>
      <div class="col-lg-5"><%= f.collection_select(:City_id, City.all, :id, :city_name , :class => "form-control") %></div>
    </div>
    <div class="form-group">
      <div class="col-lg-2"><%= f.label :Country_id %></div>
      <div class="col-lg-5"><%= f.collection_select(:Country_id, Country.all, :id, :country_name , :class => "form-control") %></div>
    </div>
    <div class="form-group">
      <div class="col-lg-2"><%= f.label 'Location link' %></div>
      <div class="col-lg-5"><%= f.text_field :link, :class => "form-control" %></div>
    </div>


    <div class="form-group">
      <div class="col-lg-3"></div>
      <div class="col-lg-9 text-right">
        <%= f.submit "Submit", :class => "btn btn-primary" %> &nbsp;&nbsp;

        <% if @shopping_mall.id != nil %>
            <%= link_to 'Back', shopping_mall_path(@shopping_mall), :class => "btn btn-default" %>
        <% else %>
            <%= link_to 'Back', root_path, :class => "btn btn-default" %>
        <% end %>
      </div>
    </div>

<% end %>

<div class="container">
  <div class="page-header">
    <h1>Promotions</h1>
  </div>
  <br>

  <div class="row">
<table class="table table-hover table-striped">
  <thead>
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Description</th>
    <th>Start date</th>
    <th>End date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% if @promotions.count == 0%>
      <tr>
        <td colspan="9"><i>No data</i></td>
      </tr>
  <% end %>
  <% @promotions.each do |promotion| %>
      <tr>
        <td><%= image_tag promotion.image.url(:thumb, timestamp: false) %></td>
        <td><%= promotion.title %></td>
        <td style="width: 30%"><%= promotion.description %></td>
        <td><%= promotion.start_date.strftime("%d/%m/%Y") %></td>
        <td><%= promotion.end_date.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Edit', edit_promotion_path(promotion) %></td>
        <td><%= link_to 'Destroy', promotion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>


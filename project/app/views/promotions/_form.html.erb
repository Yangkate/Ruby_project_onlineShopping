<%= form_for(@promotion, html: {class: "form-horizontal"}) do |f| %>
  <% if @promotion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@promotion.errors.count, "error") %> prohibited this promotion from being saved:</h2>

      <ul>
      <% @promotion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <%= hidden_field_tag 'store_id', @store_id %>
    <div class="form-group">
      <div class="col-lg-2"><%= f.label :title %></div>
      <div class="col-lg-5"><%= f.text_field :title, :class => "form-control", :required => true %></div>
    </div>

    <div class="form-group">
      <div class="col-lg-2"><%= f.label :start_date %></div>
      <div class="col-lg-5"><%= f.date_select :start_date, :class => "form-control", :required => true %></div>
    </div>
    <div class="form-group">
      <div class="col-lg-2"><%= f.label :end_date %></div>
      <div class="col-lg-5"><%= f.date_select :end_date, :class => "form-control", :required => true %></div>
    </div>
    <div class="form-group">
      <div class="col-lg-2"><%= f.label :discount_code %></div>
      <div class="col-lg-5"><%= f.text_field :discount_code, :class => "form-control" %></div>
    </div>
    <div class="form-group">
      <div class="col-lg-2"><%= f.label :description %></div>
      <div class="col-lg-5"><%= f.text_area :description, :class => "form-control" %></div>
    </div>
    <div class="form-group">
      <div class="col-lg-2"><%= f.label :image %> <span style="color: red;">(Required)</span></div>
      <div class="col-lg-5"><%= f.file_field :image  %></div>
    </div>

    <br>
    <div class="form-group">
      <div class="col-lg-3"></div>
      <div class="col-lg-9 text-right">
        <%= f.submit "Submit", :class => "btn btn-primary" %> &nbsp;&nbsp;
        <%= link_to 'Back', promotion_of_store_path(:store_id => @promotion.Store_id), :class => "btn btn-default" %>
      </div>
    </div>
<% end %>

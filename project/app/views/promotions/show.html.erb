<div class="container">
  <div class="page-header">
    <h1><%=@promotion.title %> <small>(Until <%= @promotion.end_date.strftime("%d/%m/%Y")%>)</small></h1>
  </div>
  <br>

<p id="notice"><%= notice %></p>



  <div class="row well">
    <div class="col-lg-5 text-left">
      <%= image_tag @promotion.image.url(:medium, timestamp: false) %>
    </div>
    <div class="col-lg-1 text-left">
      <p><strong>Store:</strong></p>
      <p><strong>Period:</strong></p>
      <p><strong>Location:</strong></p>
      <p><strong>Description:</strong></p>
    </div>
    <div class="col-lg-6 text-left">
      <p><%= link_to Store.find(@promotion.Store_id).store_name, promotion_of_store_show_path(:store_id => @promotion.Store_id) %></p>
      <p><%= @promotion.start_date.strftime("%d/%m/%Y") %> - <%= @promotion.end_date.strftime("%d/%m/%Y") %></p>
      <p><%= Store.find(@promotion.Store_id).location %></p>
      <p><%= @promotion.description %></p>
    </div>


  </div>

</div>
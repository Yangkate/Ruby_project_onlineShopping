<div class="container">
  <div class="page-header">
    <h1>Cities</h1>
  </div>
  <br>

  <div class="row">
    <table class="table table-hover table-striped">
      <thead>
      <tr>
        <th>City name</th>
        <th>Country</th>
        <th colspan="3"></th>
      </tr>
      </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td style="width: 70%;"><%= city.city_name %></td>
        <td><%= Country.find(city.Country).country_name %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    <br>

    <div class="col-lg-12 text-right"><%= link_to 'New City', new_city_path, :class => "btn btn-default" %></div>

  </div>
</div>

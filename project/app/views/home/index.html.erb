<script type="application/javascript">
    $(function () {
        $('[data-toggle="popover"]').popover()
    })
</script>


<!-- Carousel ================================================== -->
<div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-bottom: 0px;">

  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <div class="carousel-inner">
    <div class="item active">
      <div class="container">
        <img class="img-responsive center-block" src="http://www.gemvisa.com.au/media/feature-banner-girl-shopping.jpg" alt="...">
        <div class="carousel-caption">
          <h1>Join us</h1>
          <p>
            Become our member.
          </p>
          <p><%= link_to 'Join us', new_user_registration_path, :class => "btn btn-primary" %></p>
        </div>
      </div>
    </div>
    <div class="item">
      <div class="container">
        <img class="img-responsive center-block" src="http://www.gemvisa.co.nz/media/home-banner-girls.jpg" alt="...">
        <div class="carousel-caption">
          <h1>Incoming Event!</h1>
          <p>
            Challenge us your diet recipe! ...
          </p>
          <p><a class="btn btn-lg btn-primary" href="#" role="button">Learn more</a></p>
        </div>
      </div>
    </div>
    <div class="item">
      <div class="container">
        <center><%= link_to image_tag('web5.jpg'), root_path, :class => "mg-responsive center-block " %></center>
        <div class="carousel-caption">
          <p><a class="btn btn-lg btn-primary" href="#" role="button">Contact us</a></p>
        </div>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
<!-- /.carousel -->

<div class="container" style="padding-top: 0px;">
<div class="page-header"><h3>The lastest promotions</h3></div>

<div class="row ">
  <% @promotions.each do |promotion| %>

      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= image_tag promotion.image.url(:list, timestamp: false), :class => "img-rounded" %>
          <div class="caption">
            <h3><%= promotion.title %></h3>
            <p>Period: <%= promotion.start_date.strftime("%d/%m/%Y") %> - <%= promotion.end_date.strftime("%d/%m/%Y") %></p>
            <p>Shopping mall: <%= link_to ShoppingMall.find(Store.find(promotion.Store_id).ShoppingMall_id).shopping_mall_name, shopping_mall_path(Store.find(promotion.Store_id).ShoppingMall_id) %></p>
            <p>
              <%= link_to 'Detail', promotion_path(promotion.id), :class => "btn btn-info btn-sm" %>
              <button tabindex="0" type="button" class="btn btn-primary btn-sm" data-placement="bottom" data-trigger="focus" data-toggle="popover" title="Discount code" data-content="<%= promotion.discount_code %>">Get discount code</button>
            </p>
          </div>
        </div>
      </div>

  <% end %>
</div>
</div>


<div class="container">
  <div class="page-header">
    <h1>Users</h1>
  </div>
  <br>

  <div class="row">
    <table class="table table-hover table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th colspan="4"></th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td style="width: 20%"><%= user.first_name %> <%= user.last_name %></td>
            <td style="width: 20%"><%= user.email %></td>
            <td style="width: 30%"><%= Role.find(user.Role_id).Title %></td>
            <td>
              <% if user.Role_id == 5 %>
                    <%= link_to 'Verify', change_user_role_path(:id => user.id, :role => 2) %>
              <% end %>
            </td>
            <td><%= link_to 'Set as administrator', change_user_role_path(:id => user.id, :role => 1) %></td>
            <td><%= link_to 'Ban', change_user_role_path(:id => user.id, :role => 4) %></td>
            <td><%= link_to 'Unban', change_user_role_path(:id => user.id, :role => 3) %></td>
            <td><%= link_to 'Delete', delete_user_path(:id => user.id) %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>


  </div>
</div>



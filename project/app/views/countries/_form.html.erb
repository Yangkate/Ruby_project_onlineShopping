<%= form_for(@country, html: {class: "form-horizontal"}) do |f| %>
    <% if @country.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@country.errors.count, "error") %>
            prohibited this recipe from being saved:
          </h2>
          <ul>
            <% @country.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group">
      <div class="col-lg-2"><%= f.label :country_name %></div>
      <div class="col-lg-5"><%= f.text_field :country_name, :class => "form-control", :required => true %></div>
    </div>
    </br>
    <div class="form-group">
      <div class="col-lg-3"></div>
      <div class="col-lg-9 text-right">
        <%= f.submit "Submit", :class => "btn btn-primary" %> &nbsp;&nbsp;
        <%= link_to 'Back', countries_path, :class => "btn btn-default" %>
      </div>
    </div>
<% end %>
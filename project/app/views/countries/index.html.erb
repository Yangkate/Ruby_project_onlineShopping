<div class="container">
  <div class="page-header">
    <h1>Countries</h1>
  </div>
  <br>

  <div class="row">
    <table class="table table-hover table-striped">
      <thead>
      <tr>
      <th>Country name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td style="width: 70%"><%= country.country_name %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <div class="col-lg-12 text-right"><%= link_to 'New Country', new_country_path, :class => "btn btn-default" %></div>

    </div>
  </div>

